pipeline {
    agent {

      dockerfile true

    }
    stages {
	
        stage('Build') {
            steps {
               
		   sh '''
               sudo docker pull microsoft/dotnet:2.1-aspnetcore-runtime
              '''
                  sh '''
               sudo docker build -t sergiovega95/testjenkins:latest .
              '''
            }
        }

	stage('Deploy') {
            steps {
              
                 sh '''
               sudo docker run sergiovega95/testjenkins:latest -p 9191:9191
               '''
            }
        }
    }
}