pipeline {
    agent {

      dockerfile { dir '/jenkins' } 

    }
    stages {
	
        stage('Build') {
            steps {
               
                  sh '''
               sudo docker build -t sergiovega95/testjenkins .
              '''
            }
        }

	stage('Deploy') {
            steps {
              
                 sh '''
               sudo docker run sergiovega95/testjenkins -p 9191:9191
               '''
            }
        }
    }
}